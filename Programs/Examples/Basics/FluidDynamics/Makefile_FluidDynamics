PATH_GENASIS = ../../../../..

include $(PATH_GENASIS)/Build/Makefile_Build

all: SineWaveAdvection SawtoothWaveAdvection RiemannProblem

SineWaveAdvection: SineWaveAdvection.o
	$(LINK) $(FLAGS) \
          -o SineWaveAdvection_$(MACHINE) \
          $(BASICS) DistributedMesh_Form.o ConservedFields_Template.o \
          ConservationLawStep_Form.o ConservationLawEvolution_Template.o \
          PressurelessFluid_Form.o PlaneWaveAdvection_Template.o \
          SineWaveAdvection_Form.o SineWaveAdvection.o \
          $(LIBRARIES)

SawtoothWaveAdvection: SawtoothWaveAdvection.o
	$(LINK) $(FLAGS) \
          -o SawtoothWaveAdvection_$(MACHINE) \
          $(BASICS) DistributedMesh_Form.o ConservedFields_Template.o \
          ConservationLawStep_Form.o ConservationLawEvolution_Template.o \
          PressurelessFluid_Form.o PlaneWaveAdvection_Template.o \
          SawtoothWaveAdvection_Form.o SawtoothWaveAdvection.o \
          $(LIBRARIES)

RiemannProblem: RiemannProblem.o
	$(LINK) $(FLAGS) \
          -o RiemannProblem_$(MACHINE) \
          $(BASICS) DistributedMesh_Form.o ConservedFields_Template.o \
          ConservationLawStep_Form.o ConservationLawEvolution_Template.o \
          PressurelessFluid_Form.o PolytropicFluid_Form.o \
          RiemannProblem_Form.o RiemannProblem.o \
          $(LIBRARIES)

clean:
	rm -f *.o *.mod *.ld

clobber: clean
	rm -f SineWaveAdvection_*
	rm -f SawtoothWaveAdvection_*
	rm -f RiemannProblem_*

include $(PATH_BASICS)/Makefile_Dependencies

