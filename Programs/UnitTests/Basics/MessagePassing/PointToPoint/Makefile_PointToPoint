          IncomingMessageArrayBigInteger_Form.o \
          IncomingMessageArrayReal_Form.o IncomingMessageArrayComplex_Form.o \
          OutgoingMessageArrayInteger_Form.o \
          OutgoingMessageArrayBigInteger_Form.o \
          OutgoingMessageArrayReal_Form.o OutgoingMessageArrayComplex_Form.o \
	  IncomingOutgoingMessageArray_Forms_Test.o

clean:
	rm -f *.o *.mod *.ld

clobber: clean
	rm -f IncomingOutgoingMessage_Forms_Test_*
	rm -f IncomingOutgoingMessageArray_Forms_Test_*

include $(PATH_VARIABLE_MANAGEMENT)/Makefile_Dependencies
include $(PATH_DISPLAY)/Makefile_Dependencies
