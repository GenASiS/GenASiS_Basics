	$(LINK) $(FLAGS) \
          -o IncomingOutgoingMessage_Forms_Test_$(MACHINE) \
          $(VARIABLE_MANAGEMENT) $(DISPLAY) $(MESSAGE_PASSING_BASICS) \
	  Message_Template.o MessageInteger_Form.o MessageBigInteger_Form.o \
	  MessageReal_Form.o MessageComplex_Form.o \
          IncomingMessageInteger_Form.o IncomingMessageBigInteger_Form.o \
          IncomingMessageReal_Form.o IncomingMessageComplex_Form.o \
          OutgoingMessageInteger_Form.o OutgoingMessageBigInteger_Form.o \
          OutgoingMessageReal_Form.o OutgoingMessageComplex_Form.o \
          IncomingOutgoingMessage_Forms_Test.o

IncomingOutgoingMessageArray_Forms_Test: IncomingOutgoingMessageArray_Forms_Test.o
